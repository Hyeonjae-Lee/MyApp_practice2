<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto" android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/gray" android:padding="5pt">

    <LinearLayout
            android:background="@drawable/background_killer"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <ImageView
                android:layout_width="110dp"
                android:layout_height="118dp" app:srcCompat="@drawable/baboon" android:id="@+id/AnimalImage"/>
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" android:id="@+id/MyInfo">
            <TextView
                    android:text="Babon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/textViewName" android:textSize="24sp"
                    android:textStyle="bold"/>
            <TextView
                    android:text="Babon is lives in zoo with different kids of animals"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/textViewInfo" android:visibility="visible"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>