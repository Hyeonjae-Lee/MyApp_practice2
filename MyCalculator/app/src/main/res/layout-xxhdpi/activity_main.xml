<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity" android:orientation="vertical"
        android:background="@color/MyBack">
    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/etShowNumber" android:layout_marginTop="20pt"
            android:background="@color/Mygray" android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:gravity="right" android:textSize="50sp" android:textColor="@color/myWhiteback" android:hint="0"
            android:paddingBottom="50pt"/>
    <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TableRow
                android:layout_marginBottom="1pt"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <Button
                    android:layout_marginRight="1pt"
                    android:text="AC"
                    android:textSize="18sp"
                    android:layout_width="30pt"
                    android:layout_height="30pt" android:id="@+id/button19" android:background="@color/myWhiteback"
                    android:layout_weight="1" android:onClick="buClean"/>
            <Button
                    android:layout_marginRight="1pt"
                    android:text="+/-"
                    android:textSize="18sp"
                    android:layout_width="30pt"
                    android:layout_height="30pt" android:id="@+id/buplusminus" android:background="@color/myWhiteback"
                    android:layout_weight="1" android:onClick="buNumberEvent"/>
            <Button
                    android:layout_marginRight="1pt"
                    android:text="%" android:textSize="18sp"
                    android:layout_width="30pt"
                    android:layout_height="30pt" android:id="@+id/button17" android:background="@color/myWhiteback"
                    android:layout_weight="1" android:onClick="buPercent"/>
            <Button
                    android:text="/" android:textSize="18sp"
                    android:layout_width="30pt"
                    android:layout_height="30pt" android:id="@+id/buDiv" android:background="@color/MyOrange"
                    android:textColor="@color/myWhiteback" android:layout_weight="1" android:onClick="buOpEvent"/>
        </TableRow>
        <TableRow
                android:layout_marginBottom="1pt"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <Button
                    android:layout_marginRight="1pt"
                    android:text="7" android:textSize="18sp"
                    android:layout_width="wrap_content"
                    android:layout_height="30pt" android:id="@+id/bu7" android:background="@color/myWhiteback"
                    android:layout_weight="1" android:onClick="buNumberEvent"/>
            <Button
                    android:layout_marginRight="1pt"
                    android:text="8" android:textSize="18sp"
                    android:layout_width="30pt"
                    android:layout_height="30pt" android:id="@+id/bu8" android:background="@color/myWhiteback"
                    android:layout_weight="1" android:onClick="buNumberEvent"/>
            <Button
                    android:layout_marginRight="1pt"
                    android:text="9" android:textSize="18sp"
                    android:layout_width="30pt"
                    android:layout_height="30pt" android:id="@+id/bu9" android:background="@color/myWhiteback"
                    android:layout_weight="1" android:onClick="buNumberEvent"/>
            <Button
                    android:text="*" android:textSize="18sp"
                    android:layout_width="30pt"
                    android:layout_height="30pt" android:id="@+id/buMul" android:background="@color/MyOrange"
                    android:textColor="@color/myWhiteback" android:layout_weight="1" android:onClick="buOpEvent"/>
        </TableRow>
        <TableRow
                android:layout_marginBottom="1pt"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <Button
                    android:layout_marginRight="1pt"
                    android:text="4" android:textSize="18sp"
                    android:layout_width="30pt"
                    android:layout_height="30pt" android:id="@+id/bu4" android:background="@color/myWhiteback"
                    android:layout_weight="1" android:onClick="buNumberEvent"/>
            <Button
                    android:layout_marginRight="1pt"
                    android:text="5" android:textSize="18sp"
                    android:layout_width="30pt"
                    android:layout_height="30pt" android:id="@+id/bu5" android:background="@color/myWhiteback"
                    android:layout_weight="1" android:onClick="buNumberEvent"/>
            <Button
                    android:layout_marginRight="1pt"
                    android:text="6" android:textSize="18sp"
                    android:layout_width="30pt"
                    android:layout_height="30pt" android:id="@+id/bu6" android:background="@color/myWhiteback"
                    android:layout_weight="1" android:onClick="buNumberEvent"/>
            <Button
                    android:text="-"
                    android:layout_width="30pt"
                    android:layout_height="30pt" android:id="@+id/buSub" android:background="@color/MyOrange"
                    android:textColor="@color/myWhiteback" android:layout_weight="1" android:onClick="buOpEvent"/>
        </TableRow>
        <TableRow
                android:layout_marginBottom="1pt"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <Button
                    android:layout_marginRight="1pt"
                    android:text="1" android:textSize="18sp"
                    android:layout_width="30pt"
                    android:layout_height="30pt" android:id="@+id/bu1" android:background="@color/myWhiteback"
                    android:layout_weight="1" android:onClick="buNumberEvent"/>
            <Button
                    android:layout_marginRight="1pt"
                    android:text="2" android:textSize="18sp"
                    android:layout_width="30pt"
                    android:layout_height="30pt" android:id="@+id/bu2" android:background="@color/myWhiteback"
                    android:layout_weight="1" android:onClick="buNumberEvent"/>
            <Button
                    android:layout_marginRight="1pt"
                    android:text="3" android:textSize="18sp"
                    android:layout_width="wrap_content"
                    android:layout_height="30pt" android:id="@+id/bu3" android:background="@color/myWhiteback"
                    android:layout_weight="1" android:onClick="buNumberEvent"/>
            <Button
                    android:text="+" android:textSize="18sp"
                    android:layout_width="wrap_content"
                    android:layout_height="30pt" android:id="@+id/buSum" android:background="@color/MyOrange"
                    android:textColor="@color/myWhiteback" android:layout_weight="1" android:onClick="buOpEvent"/>
        </TableRow>
    </TableLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <Button
                android:layout_marginRight="1pt"
                android:text="0" android:textSize="18sp"
                android:layout_width="120dp"
                android:layout_height="30pt" android:id="@+id/bu0"
                android:background="@color/myWhiteback" android:layout_weight="1" android:onClick="buNumberEvent"/>
        <Button android:layout_marginRight="1pt"
                android:text="." android:textSize="18sp"
                android:layout_width="74dp"
                android:layout_height="30pt" android:id="@+id/buDot"
                android:background="@color/myWhiteback" android:layout_weight="0.5" android:onClick="buNumberEvent"/>
        <Button
                android:text="=" android:textSize="18sp"
                android:layout_width="30pt"
                android:layout_height="30pt" android:id="@+id/button"
                android:background="@color/MyOrange" android:textColor="@color/myWhiteback"
                android:layout_weight="0.5" android:onClick="buEqualEvent"/>
    </LinearLayout>
</LinearLayout>